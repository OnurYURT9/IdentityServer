
@{
    ViewData["Title"] = "Index";
}
@using Microsoft.AspNetCore.Authentication
<p3>Bu sayfayı sadece üye olan kullanıcılar görebilir.</p3>

<p4>Claim Dataları</p4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Claim Type</th>
            <th>Claim Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in User.Claims)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.Value</td>
                </tr>
            }
    </tbody>
</table>

<p4>Authentication Dataları</p4>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Auth prop Type</th>
            <th>Auth prop Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (await Context.AuthenticateAsync()).Properties.Items)
        {
            <tr>
                <td>@item.Key</td>
                <td>@item.Value</td>
            </tr>
        }
    </tbody>
</table>